/**
 * @param {string} type
 * @param {boolean} isAuthor
 */
function canPreviewArticle(type, isAuthor) {
    if (type === "admin" || isAuthor === true) {
        return true
    } else {
        return false
    }
 }

/// Can also be written without using if/else: ///

/**
 * @param {string} type
 * @param {boolean} isAuthor
 */
function canPreviewArticle(type, isAuthor) {
    return type === "admin" || isAuthor === true
}

